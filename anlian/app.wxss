page {
	position: relative;
	box-sizing: border-box;
	padding-bottom: 50px;
	font-family: "微软雅黑";
}
view, text {
	font-family: "微软雅黑";
}
.footer {
	position: absolute;
	left: 0;
	bottom: 0;
	width: 100%;
	height: 50px;
	text-align: center;
	background: #e9ebf0;
}
.footer .img {
	display: none;
	position: absolute;
	top: 10px;
	width: 237px;
	margin-left: 10px;
}
.footer .tel {
	display: none;
	position: absolute;
	top: 13px;
	right: 10px;
	width: 22px;
}
.footer text {
	position: absolute;
	left: 0;
	top: 50%;
	width: 100%;
	font-size: 14px;
	color: #8c989c;
	transform: translate(0, -50%);
}
.footer .m {
	position: absolute;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	opacity: 0;
	z-index: 100;
}
.button {
	margin-top: 30px;
	height: 40px;
	line-height: 40px;
	font-size: 14px;
	border: none;
	color: white;
}
.clearfix:after {
	content: "";
	display: table;
	clear: both;
}

.tipsBg {
	background-color: #000;
	position: fixed;
	opacity: 0.65;
	width: 70%;
	padding-bottom: 10px;
	line-height: 1.5;
	font-size: 14px;
	margin-left: 15%;
	z-index: 99;
	margin-top: 100px;

}
.tips {
	width: 80px;
    height: 80px;
    margin-top: 20px;
	margin-left: 50%;
	transform: translateX(-40px);
}
.tips-text {
	color: #fff;
    margin-top: 5px;
    margin-bottom: 5px;
	width: 100%;
	font-family: 微软雅黑;
	text-align: center;
	display: block;
}
.nav {
	position: fixed;
	left: 0;
	bottom: 0;
	width: 100%;
	line-height: 20px;
	text-align: center;
	border-top: 1px solid #f2f2f2;
	background: white;
	z-index: 100;
}
.nav view {
	position: relative;
	float: left;
	width: 50%;
	padding-top: 29px;
	font-size: 12px;
	color: #333;
}
.nav view:before {
	content: '';
	position: absolute;
	top: 10px;
	left: 50%;
	width: 20px;
	height: 20px;
	background-size: 100% 100%;
	transform: translate(-50%, 0);
}
.nav .index:before {
	background-image: url(http://www.allianz.cn/images/wxApplet/icon_component.png);
}
.nav .own:before {
	background-image: url(http://www.allianz.cn/images/wxApplet/icon_API.png);
}
.nav .index.active:before {
	background-image: url(http://www.allianz.cn/images/wxApplet/icon_component_HL.png);
}
.nav .own.active:before {
	background-image: url(http://www.allianz.cn/images/wxApplet/icon_API_HL.png);
}